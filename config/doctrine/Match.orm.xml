<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="HexagonalPlayground\Domain\Match" table="matches">
        <indexes>
            <index name="idx_season_match_day" columns="season_id,match_day"/>
        </indexes>
        <id name="id" type="string" />
        <field name="matchDay" type="integer" column="match_day" />
        <field name="kickoff" type="datetime_immutable" nullable="true" />
        <field name="cancelledAt" column="cancelled_at" type="datetime_immutable" nullable="true"/>
        <embedded name="matchResult" class="HexagonalPlayground\Domain\MatchResult" />
        <many-to-one field="season" target-entity="HexagonalPlayground\Domain\Season">
            <join-column name="season_id" referenced-column-name="id" nullable="false" />
        </many-to-one>
        <many-to-one field="homeTeam" target-entity="HexagonalPlayground\Domain\Team">
            <join-column name="home_team_id" referenced-column-name="id" nullable="false" />
        </many-to-one>
        <many-to-one field="guestTeam" target-entity="HexagonalPlayground\Domain\Team">
            <join-column name="guest_team_id" referenced-column-name="id" nullable="false" />
        </many-to-one>
        <many-to-one field="pitch" target-entity="HexagonalPlayground\Domain\Pitch">
            <join-column name="pitch_id" referenced-column-name="id" />
        </many-to-one>
    </entity>
</doctrine-mapping>