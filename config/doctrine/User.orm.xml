<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="HexagonalPlayground\Domain\User" table="users" repository-class="HexagonalPlayground\Infrastructure\ORM\UserRepository">
        <id name="id" type="string" />
        <field name="email" type="string" unique="true" />
        <field name="password" type="string" />
        <field name="lastPasswordChange" column="last_password_change" type="datetime_immutable" nullable="true"/>
        <many-to-many target-entity="HexagonalPlayground\Domain\Team" field="teams">
            <join-table name="users_teams_link">
                <join-columns>
                    <join-column name="user_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="team_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>